<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('../partials/head' , {titulo}) %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/cartao.css">
    <link rel="shortcut icon" type="imagex/png" href="/images/icone.webp">
    <title>Cartão de Crédito</title>
</head>
<body>

    <%- include('../partials/menu') %>


    <div class="container">
        <div class="content">
            <div class="first-content">
                <div class="first-column">
                    <div class="itens-esquerda">
                        <div class="titulo">
                                <h2 class="title"> Forma de pagamento </h2>
                                </div>
                                <div class="botoes">
                                    <a href="cartao.html"><button class="btn" id="btn-cartao" > Cartão de crédito </button></a>            
                                </div>
                        </div>
                    </div>  
                    <div class="second-column">
                        <div class="cartao">
                            <div class="campo-1">
                                <input type="text" id="nomecartao"  placeholder="Nome impresso no cartão" required>
                            </div>
                            <div class="campo-2">
                                <input type="text" id="numerocartao" placeholder="Número do cartão"required>
                                <input type="text" id="validade" placeholder="Validade --/--" required>
                                <input type="text" id="cvv" placeholder="cvv" required>
                            </div>
                            <div class="campo-3">
                                <input type="text" id="cpf"placeholder="CPF do titular" required>
                                <input type="date" id="datanasc" placeholder="Data de nascimento" required>
                            </div>   
                        </div> 
                      
                            <div class="div-finalizar">
                                <button class="btn" id="btn-finalizar" onclick="criaCartao()"> Finalizar </button>
                            </div>
                            
                        </div>    
                </div>                  
            </div>    
        </div>     
    </div>
    
    <script src="service/cartao.fetch.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</body>
</html>